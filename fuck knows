  motorSpeedB = 0.3;
  equalizeMotor();

  DistanceA();
  DistanceB();

  while (true) {  // Continuous movement
    DistanceA();
    DistanceB();

    /*float avgDistance = (distanceA + distanceB) / 2.0;

